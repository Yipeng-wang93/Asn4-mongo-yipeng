<h1>Add New Movie</h1>
<form action="/movies/add" method="POST">
    <div class="form-group">
        <label for="Movie_ID">Movie ID:</label>
        <input type="number" name="Movie_ID" id="Movie_ID" required>
    </div>
    
    <div class="form-group">
        <label for="Title">Title:</label>
        <input type="text" name="Title" id="Title" required>
    </div>
    
    <div class="form-group">
        <label for="Year">Year:</label>
        <input type="number" name="Year" id="Year">
    </div>
    
    <div class="form-group">
        <label for="Director">Director:</label>
        <input type="text" name="Director" id="Director">
    </div>
    
    <div class="form-group">
        <label for="Released">Released:</label>
        <input type="text" name="Released" id="Released">
    </div>
    
    <div class="form-group">
        <label for="Genre">Genre:</label>
        <input type="text" name="Genre" id="Genre">
    </div>
    
    <div class="form-group">
        <label for="Plot">Plot:</label>
        <textarea name="Plot" id="Plot" rows="4"></textarea>
    </div>
    
    <div class="form-group">
        <label for="imdbRating">IMDB Rating:</label>
        <input type="number" step="0.1" min="0" max="10" name="imdbRating" id="imdbRating">
    </div>
    
    <button type="submit">Add Movie</button>
</form>